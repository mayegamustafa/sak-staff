# ─────────────────────────────────────────────
# SAK Staff Backend – Environment Configuration
# Copy to .env and fill in your values
# ─────────────────────────────────────────────

NODE_ENV=development
PORT=4000

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sak_staff
DB_USER=sak_admin
DB_PASSWORD=your_secure_password_here

# JWT
JWT_SECRET=change_this_to_a_long_random_secret_key
JWT_REFRESH_SECRET=change_this_to_another_long_random_secret
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=30d

# File uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10

# CORS – comma separated allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_DIR=logs
