{
  "name": "@sak/backend",
  "version": "1.0.0",
  "description": "SAK Staff Profiling â€“ REST API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "cross-env \"NODE_OPTIONS=--require ts-node/register\" knex migrate:latest --knexfile src/db/knexfile.ts",
    "migrate:down": "cross-env \"NODE_OPTIONS=--require ts-node/register\" knex migrate:rollback --knexfile src/db/knexfile.ts",
    "seed": "cross-env \"NODE_OPTIONS=--require ts-node/register\" knex seed:run --knexfile src/db/knexfile.ts"
  },
  "dependencies": {
    "@sak/shared": "*",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
